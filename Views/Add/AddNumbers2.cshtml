    {
        <b> Result is :  @ViewBag.result </b>
    }
    else
    {
        using (Html.BeginForm("AddNumbers", "Add", FormMethod.Post))
        {

            @Html.Label("Enter No1")
            @Html.TextBox("txtNo1");
